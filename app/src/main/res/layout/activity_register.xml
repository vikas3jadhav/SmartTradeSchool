<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="22sp"
            android:textColor="#1a051d"
            android:fontFamily="@font/pt_sans_bold"/>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Name :"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <EditText
                android:id="@+id/edit_name"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColor="#3f3356"
                android:textSize="15sp"
                android:paddingStart="16dp"
                android:paddingTop="13dp"
                android:paddingBottom="15dp"
                android:textColorHint="#d0c9d6"
                android:elevation="7dp"
                android:background="@drawable/rect_white"
                android:fontFamily="@font/pt_sans_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="D.O.B. :"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <EditText
                android:id="@+id/edit_dob"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of birth"
                android:focusable="false"
                android:textColor="#3f3356"
                android:textSize="15sp"
                android:paddingStart="16dp"
                android:paddingTop="13dp"
                android:paddingBottom="15dp"
                android:textColorHint="#d0c9d6"
                android:elevation="7dp"
                android:background="@drawable/rect_white"
                android:fontFamily="@font/pt_sans_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Mobile No :"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <EditText
                android:id="@+id/edit_mobile"
                android:inputType="number"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No"
                android:textColor="#3f3356"
                android:textSize="15sp"
                android:paddingStart="16dp"
                android:paddingTop="13dp"
                android:paddingBottom="15dp"
                android:textColorHint="#d0c9d6"
                android:elevation="7dp"
                android:background="@drawable/rect_white"
                android:fontFamily="@font/pt_sans_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Email :"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <EditText
                android:id="@+id/edit_email"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColor="#3f3356"
                android:textSize="15sp"
                android:paddingStart="16dp"
                android:paddingTop="13dp"
                android:paddingBottom="15dp"
                android:textColorHint="#d0c9d6"
                android:elevation="7dp"
                android:background="@drawable/rect_white"
                android:fontFamily="@font/pt_sans_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Trading Segment :"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_segment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

                <!--                <com.androidbuts.multispinnerfilter.MultiSpinnerSerachWithoutSection-->
<!--                    android:id="@+id/spinner_segment"-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_margin="5dp"-->
<!--                    android:gravity="center"-->
<!--                    app:hintText="Select Trading Segment" />
-->
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkbox_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="I agree to the "
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_privacy_notice"
                    android:text="terms and conditions"
                    android:textSize="15sp"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="70dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:fontFamily="@font/pt_sans_bold"
                android:background="@drawable/rect_red"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>