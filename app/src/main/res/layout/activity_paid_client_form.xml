<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PaidClientFormActivity">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form for paid client"
            android:textSize="22sp"
            android:textColor="#1a051d"
            android:fontFamily="@font/pt_sans_bold"/>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="What is age group ?"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_age_group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="How many dependents so you financially support ?"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_dependents"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Gross Annual Income details"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_annual_income"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="What is the size of your emergency fund ?"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_emergency_fund"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Source of income "
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_source_of_income"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="What percentage of monthly income is allocated to pay off debt [all EMIs] ? "
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_percentage_income"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Assets you own"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_assets"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="What is your Investment horizon? How long can you keep your money invested in the market before needing access to it?"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_investment_horizon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Investment Experience"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_investment_experience"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Existing portfolio (investment) amount"
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_portfolio_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Investment Goal "
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_investment_goal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text="Proposed Investment Amount  "
                android:textSize="13sp"
                android:textColor="@color/red"/>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:cardview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                cardview:cardCornerRadius="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                cardview:cardElevation="4dp"
                cardview:cardPreventCornerOverlap="false"
                cardview:cardUseCompatPadding="true">

                <Spinner
                    android:id="@+id/spinner_proposed_investment_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkbox_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="I agree to the "
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_privacy_notice"
                    android:text="terms and conditions"
                    android:textSize="15sp"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <Button
                android:id="@+id/btn_submit"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="70dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:fontFamily="@font/pt_sans_bold"
                android:background="@drawable/rect_red"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>